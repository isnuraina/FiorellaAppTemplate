@model IEnumerable<Product>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>CategoryName</th>
                                    <th>Created Date</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="150" height="150" src="~/assets/img/@(product.ProductImages?.FirstOrDefault(p => p.IsMain)?.ImageUrl ?? "default.png")" />
                                        </td>

                                      
                                        <td>@product.Name</td>
                                        <td>@product.Price</td>
                                        <td>@product.Category.Name</td>
                                        <td>@product.CreatedDate?.ToString("dd,MM,yyyy")</td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-action="detail" asp-route-id="@product.Id">Detail</a>
                                            <a class="btn btn-outline-success" asp-action="update" asp-route-id="@product.Id">Update</a>
                                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@product.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>