@model FiorellaApp.Models.Product

<div class="container">
    <h3>Product Details</h3>
    <div>
        <h4>@Model.Name</h4>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p><strong>Stock Count:</strong> @Model.Count</p>
        <p><strong>Created Date:</strong> @Model.CreatedDate?.ToString("dd-MM-yyyy")</p>

        <div class="product-images">
            <h5>Images</h5>
            @foreach (var image in Model.ProductImages)
            {
                <img src="~/assets/img/@image.ImageUrl" width="150" height="150" alt="Product Image" />
            }
        </div>

        <a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-3">Back to List</a>
    </div>
</div>
