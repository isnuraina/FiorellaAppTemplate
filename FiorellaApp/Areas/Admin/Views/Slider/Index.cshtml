@model IEnumerable<Slider>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Created Date</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/@slider.ImageUrl" width="150" height="150" />
                                        </td>
                                        <td>@slider.CreatedDate?.ToString("dd,MM,yyy")</td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-action="detail" asp-route-id="@slider.Id">Detail</a>
                                            <a class="btn btn-outline-success" asp-action="update" asp-route-id="@slider.Id">Update</a>
                                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>